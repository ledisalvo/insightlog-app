@inherits LayoutComponentBase
@using InsightLogs.UI.Components.Dialog
@using MudBlazor
@inject IDialogService _dialogService

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudText Typo="Typo.h6">Insight Logs</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Success" Edge="Edge.Start" OnClick="AddError" />
    </MudAppBar>

    <MudThemeProvider />
    <MudPopoverProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {

    private async Task AddError()
    {
        await _dialogService.ShowAsync<NewError>("Agregar nuevo error");
    }
}