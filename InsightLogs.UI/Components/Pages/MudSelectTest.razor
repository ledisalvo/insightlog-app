@page "/mudtest"
@using MudBlazor

    <MudPopoverProvider>
        <MudPaper Class="m-6 p-6">
            <MudText Typo="Typo.h5">Prueba aislada de MudSelect</MudText>

            <MudSelect T="string" Label="Seleccioná una opción" @bind-Value="_testValue">
                <MudSelectItem T="string" Value="@("Uno")">Uno</MudSelectItem>
                <MudSelectItem T="string" Value="@("Dos")">Dos</MudSelectItem>
                <MudSelectItem T="string" Value="@("Tres")">Tres</MudSelectItem>
            </MudSelect>

            <MudText Class="mt-4">Valor seleccionado: @_testValue</MudText>
        </MudPaper>
    </MudPopoverProvider>

@code {
    private string? _testValue;
}
